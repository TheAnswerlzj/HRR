
@{
    ViewBag.Title = "Index";
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-trasitional.dtd">
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link rel="stylesheet"
          href="../../css/table.css" type="text/css">
    <script type="text/javascript"
            src="../../javascript/comm/comm.js">
    </script>

    <script type="text/javascript" src="../../javascript/jquery-1.7.2.js"></script>
    <script src="~/Content/jquery.unobtrusive-ajax.js"></script>
    <script src="~/javascript/vue.js"></script>
    
</head>
<body>
    <form method="post" id="ji" action="../customiz/customizAction!findPublicChar">
        <table width="100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--公共属性设置
                    </font>
                </td>
            </tr>
            <tr>
                <td align="right">
                    <input type="button" value="添加" class="BUTTON_STYLE1" v-on:click="tj">
                </td>
            </tr>
        </table>
        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr>
                <td width="49%" class="TD_STYLE1">
                    属性种类
                </td>
                <td width="44%" class="TD_STYLE1">
                    属性名称
                </td>
                <td width="7%" class="TD_STYLE1" align="center">
                    删除
                </td>
            </tr>
            <tr v-for="(item,index) in dt">
                <td class="TD_STYLE2">{{item.attribute_kind}}</td>
                <td class="TD_STYLE2">{{item.attribute_name}}</td>
                <td><a v-on:click="cz(item.Pid)" v-bind:href="['/config_public_char/Delete/'+item.id]">删除</a></td>
            </tr>
        </table>
        <p>

    </form>
</body>
</html>
<script type="text/javascript">
        var vr = new Vue({
            el: "#ji",
            data: {
                dt:null
            },
            methods: {
                load: function () {
                    var t = this;
                    $.ajax({
                        url: "/config_public_char/Index2",
                        type: "post",
                        data: "",
                        success: function (msg) {
                            //alert("1111");
                            //console.info(msg)
                           var dd = eval("("+msg+")");
                           t.dt = dd;
                        }
                    });
                },
                tj: function () {
                    window.location.href = "/config_public_char/Create";
                }
            },
            created: function () {
                this.load();
            }
        })
</script>


