<script type="text/javascript">
        var vr = new Vue({
            el: "#ji",
            data: {
                dt:null
            },
            methods: {
                load: function () {
                    var t = this;
                    $.ajax({
                        url: "/config_majorController1/Index2",
                        type: "post",
                        data: "",
                        success: function (msg) {
                            //alert("1111");
                            //console.info(msg)
                           var dd = eval("("+msg+")");
                           t.dt = dd;
                        }
                    });
                },
                tj: function () {
                    window.location.href = "/config_majorController1/Create";
                }
            },
            created: function () {
                this.load();
            }
        })
</script>

