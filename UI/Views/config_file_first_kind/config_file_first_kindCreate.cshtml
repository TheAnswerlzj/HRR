@model Model.config_file_first_kindModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link rel="stylesheet"
          href="../../css/table.css" type="text/css">
    <script type="text/javascript"
            src="../../javascript/comm/comm.js">
    </script>
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/javascript/vue.js"></script>

</head>
<body>
    <div id="div123"> 
        @using (Ajax.BeginForm("config_file_first_kindCreate", new AjaxOptions() { HttpMethod = "post" })) {
            <table width="100%">
                <tr>
                    <td>
                        <font color="black">
                            您正在做的业务是：人力资源--客户化设置--人力资源档案管理设置--I级机构设置--I级机构添加
                        </font>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <input type="submit" value="提交" class="BUTTON_STYLE1">
                        <input type="button" value="返回" class="BUTTON_STYLE1"
                               v-on:click="fh">
                    </td>
                </tr>
            </table>

            <table width="100%" border="1" cellpadding=0 cellspacing=1
                   bordercolorlight=#848284 bordercolordark=#eeeeee
                   class="TABLE_STYLE1">
                <tr>
                    <td width="19%" class="TD_STYLE1">
                        I级机构编号
                    </td>
                    <td width="81%" class="TD_STYLE2">
                    @Html.EditorFor(model=>model.first_kind_id,new { htmlAttributes = new { @class = "INPUT_STYLE1",@readonly=true } })
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        I级机构名称
                    </td>
                    <td class="TD_STYLE2">
                        @Html.EditorFor(model => model.first_kind_name, new { htmlAttributes = new { @class = "INPUT_STYLE1"  } })
                        @Html.ValidationMessageFor(model=>model.first_kind_name,"",new {@class= "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        薪酬发放责任人编号（多个编号之间请用"半角逗号"加"一个空格"隔开，如", "）
                    </td>
                    <td class="TD_STYLE2">
                        @Html.TextAreaFor(model=>model.first_kind_salary_id,new { htmlAttributes = new {@class= "TEXTAREA_STYLE1",@name= "cffk.firstKindSalaryId" }, @rows = "4", @cols = "120" })
                        @Html.ValidationMessageFor(model => model.first_kind_salary_id, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td class="TD_STYLE1">
                        销售责任人编号（多个编号之间请用"半角逗号"加"一个空格"隔开，如", "）
                    </td>
                    <td class="TD_STYLE2">
                        @Html.TextAreaFor(model => model.first_kind_sale_id, new { htmlAttributes = new { @class = "TEXTAREA_STYLE1", @name = "cffk.firstKindSaleId" }, @rows = "4", @cols = "120" })
                        @Html.ValidationMessageFor(model => model.first_kind_sale_id, "", new { @class = "text-danger" })
                    </td>
                </tr>
            </table>
        }
    </div>
</body>
</html>
<script type="text/javascript">
    var vm = new Vue({
        el: "#div123",
        data: {
            row1:null
        },
        methods: {
            fh: function () {
                window.location.href = "config_file_first_kind";
            },
        }, created: function () {

        }
    })
</script>