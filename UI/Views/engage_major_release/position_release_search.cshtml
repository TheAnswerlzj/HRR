<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-trasitional.dtd">
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

    <link rel="stylesheet"
          href="../../../css/table.css" type="text/css">
    <link rel="stylesheet"
          href="../../../css/cwcalendar.css" type="text/css">
    <script type="text/javascript"
            src="../../../javascript/comm/comm.js">
    </script>
    <script type="text/javascript"
            src="../../../javascript/comm/list.js">
    </script>
    <script type="text/javascript"
            src="../../../javascript/calendar-ch.js">
    </script>
    <script type="text/javascript"
            src="../../../javascript/jquery-1.7.2.js">
    </script>
    <script type="text/javascript"
            src="../../../javascript/locate.js">
    </script>
    <script type="text/javascript"
            src="../../../javascript/select.js">
    </script>


</head>

<body>
    <div id="div123">
        <input type="hidden" name="utilBean.currPage" id="page" />
        <table width="100%">
            <tr>
                <td>
                    <font color="black">
                        您正在做的业务是：人力资源--招聘管理--职位发布管理--职位发布变更
                    </font>
                </td>
            </tr>
        </table>
        当前可变更是职位发布总数：{{rows}}例
        <table width="100%" border="1" cellpadding=0 cellspacing=1
               bordercolorlight=#848284 bordercolordark=#eeeeee
               class="TABLE_STYLE1">
            <tr>
                <td width="15%" class="TD_STYLE1">
                    职位名称
                </td>
                <td width="20%" class="TD_STYLE1">
                    公司名称
                </td>
                <td width="10%" class="TD_STYLE1">
                    招聘人数
                </td>
                <td width="20%" class="TD_STYLE1">
                    发布时间
                </td>
                <td width="20%" class="TD_STYLE1">
                    截止时间
                </td>
                <td width="8%" class="TD_STYLE1">
                    修改
                </td>
                <td width="8%" class="TD_STYLE1">
                    删除
                </td>
            </tr>


            <tr v-for="(item,i) in row1">
                <td class="TD_STYLE2">
                    {{item.major_name}}
                </td>
                <td class="TD_STYLE2">
                    {{item.second_kind_name}}
                </td>
                <td class="TD_STYLE2">
                   {{item.human_amount}}
                </td>
                <td class="TD_STYLE2">
                    {{item.regist_time}}
                </td>
                <td class="TD_STYLE2">
                    {{item.deadline}}
                </td>
                <td class="TD_STYLE2">
                    <a v-bind:href="['/engage_major_release/position_release_change/'+item.id]">修改</a>
                </td>
                <td class="TD_STYLE2">
                    <a href="#" v-on:click="sc(item.id)">删除</a>
                </td>
            </tr>
        </table>
        <p id="p123">
            &nbsp;&nbsp;总数：{{rows}} 例 &nbsp;&nbsp;&nbsp;当前第{{currentPage}} 页 /每页显示 {{rl}} 条 &nbsp;&nbsp;&nbsp;共 {{pageSize}} 页 &nbsp;&nbsp;&nbsp;  
            <a href="#" v-on:click="syy">上一页</a> &nbsp;&nbsp;&nbsp;
            <a href="#" v-on:click="xyy">下一页</a> &nbsp;&nbsp;&nbsp;跳到第 <input name=page type=text class=input1 id="currPage" size=1> 页&nbsp;&nbsp;<input type="image" src="../../../images/go.bmp" v-on:click="go" width=18 height=18 border=0>
    </div>
</body>
</html>
<script src="~/javascript/jquery-1.7.2.js"></script>
<script src="~/javascript/vue.js"></script>
<script type="text/javascript">
    var currentPage = 1;
    var pageSize = 1;
    var rl = 2;
    var vm = new Vue({
        el: "#div123",
        data: {
            row1:null,
            rows: null,
            pageSize: null,
            rl: null,
            currentPage:null
        }, methods: {
            load: function () {
                var v = this;
                $.ajax({
                    url: "/engage_major_release/Index2",
                    type: "post",
                    data: "currentPage=" + currentPage+"&rl="+rl,
                    success: function (msg) {
                        var dt = eval("(" + msg + ")");
                        v.row1 = dt.list;
                        v.rows = dt.rows;
                        v.pageSize = dt.pageSize;
                        pageSize = dt.pageSize;
                        v.rl = rl;
                        v.currentPage = currentPage;
                        //$("#fydiv2").text("&nbsp;&nbsp;总数：" + rows + " 例 &nbsp;&nbsp;&nbsp;当前第" + currentPage + " 页 /每页显示" + rl + "条 &nbsp;&nbsp;&nbsp;共" + pageSize + " 页 &nbsp;&nbsp;&nbsp;");
                        //$("#fydiv1").text(" 当前可变更是职位发布总数：" + rows + "例");
                    }
                })
            }, syy: function () {
                if (currentPage > 1) {
                    currentPage--;
                } else {
                    currentPage = 1;
                }
                vm.load();
            }, xyy: function () {
                if (currentPage < pageSize) {
                    currentPage++;
                } else {
                    currentPage = pageSize;
                }
                vm.load();
            }, go: function () {
                var currPage123 = $("#currPage").val();
                if (currPage123 == "") {
                    currentPage = 1;
                    alert("不能为空!");
                    return;
                }
                if (currPage123 <= pageSize) {
                    currentPage = currPage123;
                }
                if (currPage123 > pageSize) {
                    alert("不能大于总页数");
                    return;
                }
                vm.load();
            }, sc: function (obj) {
                if(window.confirm("确定删除吗？")){
                    $.ajax({
                        url: "/engage_major_release/Delete",
                        type: "post",
                        data: "eid=" + obj,
                        success: function (msg) {
                            if (msg > 0) {
                                alert("删除成功");
                            } else {
                                alert("删除失败");
                            }
                            vm.load();
                        }
                    })
                }
            }
        }, created: function () {
            this.load();
            
        }
    })
</script>
